{
  "name": "dynamic-compound-interest-calculator",
  "private": true,
  "version": "0.1.0",
  "description": "Freedom24 + VUAA compound-interest desktop dashboard",
  "type": "module",
  "main": "electron/main.cjs",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "vitest run",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production electron .",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^2.13.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.3",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.freedom24.vuaa.calculator",
    "productName": "Dynamic Compound Interest",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/shared/**/*",
      "package.json"
    ]
  }
}
