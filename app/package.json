{
  "name": "dynamic-compound-interest-calculator",
  "private": true,
  "version": "1.0.2",
  "description": "Freedom24 + VUAA compound-interest desktop dashboard",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "Georg",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 node scripts/run-electron.cjs dev",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "vitest run",
    "preview": "vite preview",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node scripts/run-electron.cjs start",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "i18next": "^23.16.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.5.2",
    "recharts": "^2.13.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^38.4.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.3",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.freedom24.vuaa.calculator",
    "productName": "Dynamic Compound Interest",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/shared/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "icon": "build/icons/icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Finance"
    }
  }
}
